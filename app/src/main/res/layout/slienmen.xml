<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/server_setting_backgroung"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:layout_marginTop="24dp"
        android:textColor="#f9f9f9"
        android:drawableLeft="@drawable/server_item_back"
        android:drawablePadding="5dp"
        android:textSize="40sp"
        android:text="设置" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txSet"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="61dp"
        android:shadowColor="#50000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#9b9b9b"
        android:textSize="30sp"
        android:text="设备信息" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:text="设备名称" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginStart="120dp"
        android:layout_toEndOf="@+id/textView2"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:drawablePadding="16dp"
        android:visibility="visible"
        android:drawableRight="@drawable/servier_item_edit"
        android:text="iBoardHub"
         />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="106dp"
        android:inputType="text"
        android:maxLength="15"
        android:textSize="25sp"
        android:textColor="#fafafa"
        android:text="Nameasd"
        android:visibility="gone"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:layout_marginTop="56dp"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:text="当前连接" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:text="无设备连接"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="56dp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:text="当前网络" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:text="TextViewTest"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="56dp"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:text="当前IP" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/textView8"
        android:textColor="#fafafa"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textSize="25sp"
        android:text="192.168.1.1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="56dp"
        android:shadowColor="#50000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#9b9b9b"
        android:textSize="30sp"
        android:text="关于" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="18dp"
        android:textColor="#fafafa"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textSize="25sp"
        android:text="当前版本" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/textView10"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#fafafa"
        android:textSize="25sp"
        android:text="3.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#9b9b9b"
        android:text="www.i-board.cn" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:shadowColor="#ff000000"
        android:shadowDy="1"
        android:shadowDx="0"
        android:shadowRadius="1"
        android:textColor="#9b9b9b"
        android:text="深圳市艾博德科技股份有限公司" />
</RelativeLayout>